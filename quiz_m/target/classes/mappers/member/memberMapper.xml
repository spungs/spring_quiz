<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.care.quiz.membership.dao.IMemberDAO">
	<select id="isExistId" parameterType="String" resultType="integer">
		SELECT count(id) FROM login WHERE id=#{id}
	</select>
	<insert id="insertLogin" parameterType="com.care.quiz.membership.dto.LoginDTO">
		INSERT INTO login VALUES(#{id},#{pw})
	</insert>
	
	<select id="loginProc" parameterType="com.care.quiz.membership.dto.LoginDTO" resultType="com.care.quiz.membership.dto.LoginDTO">
		SELECT * FROM login WHERE id=#{id}
	</select>
	<select id="list" resultType="com.care.quiz.membership.dto.MemberDTO">
		SELECT * FROM spring_quiz
	</select>
</mapper>